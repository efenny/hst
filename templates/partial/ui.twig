{# H1 Heading #}
{% macro h1(text, class) %}
	<h1 class="{{ class }}">{{ text }}</h1>
{% endmacro %}

{# H2 Heading #}
{% macro h2(text, class) %}
	<h2 class="{{ class }}" >{{ text }}</h2>
{% endmacro %}

{# H3 Heading #}
{% macro h3(text, class) %}
	<h3 class="{{ class }}" >{{ text }}</h3>
{% endmacro %}

{# H4 Heading #}
{% macro h4(text, class) %}
	<h4 class="{{ class }}" >{{ text }}</h4>
{% endmacro %}

{# H5 Heading #}
{% macro h5(text, class) %}
	<h5 class="{{ class }}" >{{ text }}</h5>
{% endmacro %}

{# H6 Heading #}
{% macro h6(text, class) %}
	<h6 class="{{ class }}" >{{ text }}</h5>
{% endmacro %}

{# Paragraph #}
{% macro p(text, class) %}
	<div class="text-wrapper {{ class }}" >{{ text|wpautop }}</div>
{% endmacro %}

{# Image #}
{% macro image(img, class) %}
	<div class="img-wrapper {{ class }}" >
		<img src="{{ TimberImage(img).src }}" alt="{{ TimberImage(img).alt }}">
	</div>
{% endmacro %}

{# Search input for faq and such #}
{% macro search(placeholder, class) %}
	<div class="search-filter {{ class }}" >
		<div class="search-filter-wrapper {{ class }}" >
			<input class="search-filter-input" type="text" placeholder='{{ placeholder }}' />
		</div>
	</div>
{% endmacro %}

{# method_card #}
{% macro method_card(post, class) %}
	<div class="method-card" >
		<a href="{{ post.link }}" class="method-card-wrapper {{ class }}" >
			<div class="image">
				<img src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}">
			</div>
			<div class="info">
				<h3>{{ post.title }}</h3>
			</div>
		</a>
	</div>
{% endmacro %}

{# post_card #}
{% macro post_card(post, class) %}
	<div class="post-card" >
		<a href="{{ post.link }}" class="post-card-wrapper {{ class }}" >
			<div class="image">
				<img src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}">
			</div>
			<div class="info">
				<h3>{{ post.title }}</h3>
				<h4>{{ post.sub_title }}</h4>
				<a href="{{ post.external_link }}" target="_blank" class="button external"><span>Read More</span></a>
			</div>
		</a>
	</div>
{% endmacro %}