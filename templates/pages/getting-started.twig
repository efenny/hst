{% extends "base.twig" %}
{% import 'partial/ui.twig' as ui %}

{% block content %}
	{% include "partial/row-heading.twig" with {post: page, image: page.thumbnail} %}
  
  {# Introduction #}
  <section class='row introduction'>
    <div class='row-inner'>
    <div class='col image'>
         <div class='col-inner'>
           {{ ui.image(page.intro_image) }}
         </div>
       </div>
      <div class='col text'>
        <div class='col-inner'>
          {{ ui.p(page.introduction) }}
          <div class="buttons-wrapper" >
          {% for item in page.get_field('intro_buttons') %}
            {{ ui.button(item.button, item.class) }} 
          {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </section>

  {# Know your why? #}
   <section class='row understand-provincial-requirements top-pad-0-5 bottom-pad-0-5  x-lrg-pad-right-1 x-lrg-pad-left-1'>
     <div class='row-inner center'>
       <div class='col text x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10  x-lrg-pad-right-1 x-lrg-pad-left-1'>
         <div class='col-inner'>
           {{ ui.p(page.know_you_why_text) }}
           	<div class="buttons-wrapper" >
            {% for item in page.get_field('know_you_why').buttons %}
              {{ ui.button(item.button, item.class) }} 
            {% endfor %}
            </div>
         </div>
       </div>
       <div class='col image x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10 x-lrg-pad-right-0-5'>
         <div class='col-inner'>
           {{ ui.image(page.know_you_why_image) }}
         </div>
       </div>
     </div>
   </section>

  {# Wehen to start #}
  <section class='row establish-your-goals top-pad-0-5 bottom-pad-0-5  x-lrg-pad-right-1 '>
    <div class='row-inner center  '>
     <div class='col image x-lrg-col-6 lrg-col-5 med-col-10 sml-col-11'>
        <div class='col-inner'>
          {{ ui.image(page.establish_your_goals_image) }}
        </div>
      </div>
      <div class='col text x-lrg-col-5 lrg-col-5 med-col-10 sml-col-11 x-lrg-pad-right-1 x-lrg-pad-left-1'>
        <div class='col-inner'>
          {{ ui.p(page.establish_your_goals_text) }}
          <div class="buttons-wrapper" >
            {% for item in page.get_field('establish_your_goals').buttons %}
              {{ ui.button(item.button, item.class) }} 
            {% endfor %}
            </div>
        </div>
      </div>
    </div>
  </section>

  

  {# Connect with other homeschoolers #}
  <section class='row connect-with-other-homeschoolers top-pad-0-5 x-lrg-pad-right-1 x-lrg-pad-left-1'>
    <div class='row-inner'>
      <div class='col text x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10 x-lrg-pad-right-1 x-lrg-pad-left-1'>
        <div class='col-inner'>

        {{ ui.p(page.understand_provincial_requirements_text) }}
          <div class="buttons-wrapper" >
            {% for item in page.get_field('understand_provincial_requirements').buttons %}
              {{ ui.button(item.button, item.class) }} 
            {% endfor %}
            </div>

            
        </div>
      </div>
      <div class='col image x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10 x-lrg-pad-right-0-5'>
        <div class='col-inner'>
         {{ ui.image(page.understand_provincial_requirements_image) }}
        </div>
      </div>
    </div>
  </section>

  {# Choose your curriculum #}
  <section class='row choose-your-curriculum bottom-pad-0-5 x-lrg-pad-right-2'>
    <div class='row-inner'>
      <div class='col image x-lrg-col-5 lrg-col-5 med-col-10 sml-col-11'>
        <div class='col-inner'>
          {{ ui.image(page.connect_with_other_homeschoolers_image) }}
        </div>
      </div>
      <div class='col text x-lrg-col-5 lrg-col-5 med-col-10 sml-col-11 top-pad-1 x-lrg-pad-right-1 x-lrg-pad-left-1'>
        <div class='col-inner'>
        {{ ui.p(page.connect_with_other_homeschoolers_text) }}
          <div class="buttons-wrapper" >
            {% for item in page.get_field('connect_with_other_homeschoolers').buttons %}
              {{ ui.button(item.button, item.class) }} 
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </section>

  {# Understand provincial requirements #}
  <section class='row understand-provincial-requirements top-pad-0-5 bottom-pad-0-5  x-lrg-pad-right-1 x-lrg-pad-left-1'>
    <div class='row-inner center'>
      <div class='col text x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10  x-lrg-pad-right-1 x-lrg-pad-left-1'>
        <div class='col-inner'>
          {{ ui.p(page.choose_your_curriculum_text) }}
          <div class="buttons-wrapper" >
            {% for item in page.get_field('choose_your_curriculum').buttons %}
              {{ ui.button(item.button, item.class) }} 
            {% endfor %}
            </div>
        </div>
      </div>
      <div class='col image x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10 x-lrg-pad-right-0-5'>
        <div class='col-inner'>
          {{ ui.image(page.choose_your_curriculum_image) }}
        </div>
      </div>
    </div>
  </section>

  {# Enjoy the journey #}
  <section class='row enjoy-the-journey x-lrg-pad-right-2 x-lrg-pad-left-2'>
    <div class='row-inner'>
      <div class='col text x-lrg-col-8 lrg-col-5 med-col-10 sml-col-10  x-lrg-pad-right-1 x-lrg-pad-left-1'>
        <div class='col-inner'>
          {{ ui.p(page.enjoy_the_journey_text) }}
        </div>
      </div>
      <div class='col image x-lrg-col-8 lrg-col-5 med-col-10 sml-col-10'>
        <div class='col-inner'>
          {{ ui.image(page.enjoy_the_journey_image) }}
        </div>
      </div>
    </div>
  </section>
	{% include "partial/row-stay-informed.twig" with { form_shortcode: options.form_shortcode } %}
{% endblock %}