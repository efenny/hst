{% extends "base.twig" %}
{% import 'partial/ui.twig' as ui %}

{% block content %}
	{% include "partial/row-heading.twig" with {post: page} %}
  {# Understand provincial requirements #}
  <section class='row understand-provincial-requirements'>
    <div class='row-inner'>
      <div class='col x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
        <div class='col-inner'>
          {{ ui.p(page.understand_provincial_requirements_text) }}
        </div>
      </div>
      <div class='col x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
        <div class='col-inner'>
          {{ ui.p(page.understand_provincial_requirements_image) }}
        </div>
      </div>
    </div>
  </section>

  {# Establish your goals #}
  <section class='row understand-provincial-requirements'>
    <div class='row-inner'>
     <div class='col x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
        <div class='col-inner'>
          {{ ui.p(page.establish_your_goals_image) }}
        </div>
      </div>
      <div class='col x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
        <div class='col-inner'>
          {{ ui.p(page.establish_your_goals_text) }}
        </div>
      </div>
    </div>
  </section>

  {# Connect with other homeschoolers #}
  <section class='row understand-provincial-requirements'>
    <div class='row-inner'>
      <div class='col x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
        <div class='col-inner'>
          {{ ui.p(page.connect_with_other_homeschoolers_text) }}
          {{ ui.button(page.connect_with_other_homeschoolers_button.title, page.connect_with_other_homeschoolers_button.link) }}
        </div>
      </div>
      <div class='col x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
        <div class='col-inner'>
          {{ ui.p(page.connect_with_other_homeschoolers_image) }}
        </div>
      </div>
    </div>
  </section>

  {# Choose your curriculum #}
  <section class='row understand-provincial-requirements'>
    <div class='row-inner'>
      <div class='col x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
        <div class='col-inner'>
          {{ ui.p(page.choose_your_curriculum_image) }}
        </div>
      </div>
      <div class='col x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
        <div class='col-inner'>
          {{ ui.p(page.choose_your_curriculum_text) }}
          {{ ui.button(page.choose_your_curriculum_button.title, page.choose_your_curriculum_button.link) }}
        </div>
      </div>
    </div>
  </section>

  {# Enjoy the journey #}
  <section class='row understand-provincial-requirements'>
    <div class='row-inner'>
      <div class='col x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
        <div class='col-inner'>
          {{ ui.p(page.enjoy_the_journey_text) }}
        </div>
      </div>
      <div class='col x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
        <div class='col-inner'>
          {{ ui.p(page.enjoy_the_journey_image) }}
        </div>
      </div>
    </div>
  </section>
	{% include "partial/row-stay-informed.twig" %}
{% endblock %}  