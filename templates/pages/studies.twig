{% extends "base.twig" %}
{% import 'partial/ui.twig' as ui %}

{% block content %}
{% include "partial/row-heading.twig" with {post: page, image: page.thumbnail} %}
<section class='row questions'>
  <div class='row-inner'>
    <div class='col text x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
      <div class='col-inner'>
        {{ ui.p(page.scholarships_text) }}
        {{ ui.button(page.scholarships_button, 'external', page.donations_button.target) }}
      </div>
    </div>
    <div class='col image x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
      <div class='col-inner'>
        {{ ui.image(page.questions_image) }}
      </div>
    </div>
  </div>
</section>
<section class='row donations'>
  <div class='row-inner'>
    <div class='col image x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
      <div class='col-inner'>
        {{ ui.image(page.donations_image) }}
      </div>
    </div>
    <div class='col text x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
      <div class='col-inner'>
        {{ ui.p(page.donations_text) }}
        {{ ui.button(page.donations_button, '', page.donations_button.target) }}
      </div>
    </div>
  </div>
</section>
	{% include "partial/row-stay-informed.twig" with { form_shortcode: options.form_shortcode } %}
{% endblock %}  