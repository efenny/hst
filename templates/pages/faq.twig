{% extends "base.twig" %}
{% import 'partial/ui.twig' as ui %}

{% block content %}
	{% include "partial/row-heading.twig" with {post: page.type} %}
  <section class='row'>
    <div class='row-inner'>
      <div class='col x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
        <div class='col-inner'>
          <div class="tab-nav">
            <ul class="tab-nav-inner">
              {% for faq_term in faq_terms|keys %}
                <li>
                  <a href="#{{ faq_term }}">{{ faq_terms[faq_term] }}</a>
                </li>
              {% endfor %}    
            </ul>
          </div>

          <div class="tab-bodies">
              {% for faq_term in faq_terms|keys %}
                <div class="tab-body" id="{{ faq_term }}">
                  {{ ui.search('Search question titles...', faq_term ~ '-search') }}
                  {% set current_name_str = faq_term|slice(0,2) ~ '_loop'%}
                  <div class="search-wrapper">
                    {% for post in attribute(_context, current_name_str) %}
                      {% include 'partial/accordion.twig' with { accordion_title: post.title, accordion_content: post.content} %} 
                    {% endfor %}
                  </div>
                </div>
              {% endfor %}
          </div>

        </div>
      </div>
      <div class='col x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
        <div class='col-inner'>
          image
        </div>
      </div>
    </div>
  </section>
	{% include "partial/row-still-have-questions.twig" %}
	{% include "partial/row-stay-informed.twig" %}
{% endblock %}  