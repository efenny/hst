{% extends "base.twig" %}
{% import 'partial/ui.twig' as ui %}

{% block content %}
	<section class='row row-404 top-pad-1 bottom-pad-1 x-lrg-pad-right-1 x-lrg-pad-left-1'>
		<div class='row-inner'>
			<div class='col text x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
				<div class='col-inner'>
					{{ ui.p(options.page_404.text) }}
					{{ ui.button(options.page_404.button, 'secondary') }}
				</div>
			</div>
			<div class='col image x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
				<div class='col-inner'>
					{{ui.image(options.page_404.image, '404')}}
				</div>
			</div>
		</div>
	</section>
{% endblock %}
