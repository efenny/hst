{% extends "base.twig" %}
{% import 'partial/ui.twig' as ui %}

{% block content %}
{# splash page #}
	<section class='splash row heading'>
		<div class='splash-inner'>
			<div class='col col-'>
				<div class='col-inner'>
					<h3>{{ page.landing_area_subitle }}</h3>
					<h1>{{ page.landing_area_title }}</h1>
					<h5>{{ page.landing_area_text }}</h5>
					{{ ui.button(page.landing_area_main_button, 'top') }}
					{{ ui.button(page.landing_area_secondary_button, 'secondary') }}
				</div>
			</div>
		</div>
	</section>

	{# latest news and send me info #}
	<section class='row latest-news'>
		<div class='row-inner'>
			<div class='col x-lrg-col-4 lrg-col-5 med-col-10 sml-col-10'>
				<div class='col-inner'>
					<div class="latest-news-wrapper">
						{% for post in page.get_field('news') %}
							<article class="latest-news">
								<div class="latest-news-inner">
									<div class="image">
										{{ ui.image(post.thumbnail) }}
									</div>
									<div class="info">
										<h3>{{ post.title }}</h3>
										{{ ui.p(post.date) }}
									</div>
								</div>
							</article>
						{% endfor %}
					</div>
				</div>
			</div>
			<div class='col x-lrg-col-8 lrg-col-7 med-col-10 sml-col-10'>
				<div class='col-inner'>
						{% include "partial/stay-informed-form.twig" %}
				</div>
			</div>
		</div>
	</section>

	{# what is homeschooling #}
	<section class='row what-is-homeschooling top-pad-0-5 bottom-pad-0-5'>
		<div class='row-inner'>
			<div class='col image x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
				<div class='col-inner'>
					<a href="{{ page.new_to_homeschooling_video }}" data-lity>
					video
					{{ ui.image(page.new_to_homeschooling_image )}}
					</a>
				</div>
			</div>
			<div class='col text x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
				<div class='col-inner'>
					{{ ui.side_tab(page.get_field('new_to_homeschooling').tabs, page.new_to_homeschooling_faq_link) }} 
				</div>
			</div>
		</div>
	</section>

	{# You’ve Decided to Homeschool… Now What? #}
	<section class='row now-what x-lrg-pad-left-1 x-lrg-pad-right-1 top-pad-0-5 bottom-pad-0-5 bottom-margin-0-5'>
		<div class='row-inner'>
			<div class='col text x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
				<div class='col-inner'>
					{{ ui.p(page.now_what_text) }}
					<div class="download-wrapper" >
						{% for item in page.get_field('now_what').downloads %}
							{{ ui.button(item.button, 'download') }}
						{% endfor %}
					</div>
					{{ ui.button(page.now_what_main_button) }}
				</div>
			</div>
			<div class='col image x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
				<div class='col-inner'>
					{{ ui.image(page.now_what_image) }}
				</div>
			</div>
		</div>
	</section>

	{# 5 Top Homeschool Questions #}
	<section class='row top-homeschool-questions x-lrg-pad-left-1 x-lrg-pad-right-1 top-pad-0-5 bottom-pad-0-5'>
		<div class='row-inner'>
			<div class='col image x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
				<div class='col-inner'>
					{{ ui.image(page.top_homeschool_questions_image) }}
				</div>
			</div>
			<div class='col text x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
				<div class='col-inner'>
					{{ ui.h2(page.get_field('top_homeschool_questions').questions|length ~ page.top_homeschool_questions_title) }}
					<div class="accordion-wrapper">
						{% for question in page.get_field('top_homeschool_questions').questions %}
							{{ ui.accordion(question.title, question.text) }}
						{% endfor %}
					</div>
					{{ ui.button(page.top_homeschool_questions_main_button) }}
				</div>
			</div>
		</div>
	</section>

	{# Education Methods #}
	<section class='row education-methods'>
		<div class='row-inner'>
			<div class='col text x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
				<div class='col-inner'>
					{{ ui.p(page.education_methods_text) }}
					{{ ui.button(page.education_methods_main_button) }}
				</div>
			</div>
			<div class='col image x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10' style="background-image:url('{{ TimberImage(page.education_methods_image).src }}');">
				<div class='col-inner'>
				</div>
			</div>
		</div>
	</section>

	{# Resources #}
	<section class='row resources'>
		<div class='row-inner'>
			<div class='col x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
				<div class='col-inner'>
					{{ ui.p(page.resources_text) }}

					<div class="cards">
						{% for item in page.get_field('resources').cards %}
								<div class="card">
									<a href="{{ item.link.url }}" class="card-inner">
										<div class="svg">{{ item.icon_svg }}</div>
										<h3>{{ item.link.title }}</h3>
									</a>
								</div>
						{% endfor %}
					</div>
					
					{{ ui.button(page.resources_secondary_button, 'secondary') }}
				</div>
			</div>
		</div>
	</section>

	{# Stories row #}
	<section class='row stories'>
		<div class='row-inner'>
			<div class='col x-lrg-col-5 lrg-col-5 med-col-10 sml-col-10'>
				<div class='col-inner'>
					{% for story in stories %}
						<article class="post-card" >
							<a href="{{ story.external_link }}" target="_blank"  class="post-card-wrapper {{ class }}" >
								<div class="image">
									<img src="{{ story.thumbnail.src }}" alt="{{ story.thumbnail.alt }}">
								</div>
								<div class="info">
									<h3>{{ story.title }}</h3>
									<h4>{{ story.sub_title }}</h4>
									<div class="button external">
										<span>Read More</span>
										<svg width="11" height="12" viewBox="0 0 11 12" fill="none" xmlns="http://www.w3.org/2000/svg">
